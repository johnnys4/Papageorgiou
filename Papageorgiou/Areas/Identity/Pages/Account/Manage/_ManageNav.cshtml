@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav list-group">
    <li class="@ManageNavPages.IndexNavClass(ViewContext) list-group-item centerp" ><a class="btn" asp-page="./Index">Ο Λογαριασμός μου</a></li>
    <li class="@ManageNavPages.ChangePasswordNavClass(ViewContext) list-group-item centerp"><a class="btn" id="change-password" asp-page="./ChangePassword">Αλλαγή Κωδικού</a></li>
    @if (hasExternalLogins)
    {
        <li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext) list-group-item centerp"><a class="btn" id="external-login" asp-page="./ExternalLogins">External logins</a></li>
    }
    <li class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) list-group-item centerp"><a class="btn" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>
    <li class="@ManageNavPages.PersonalDataNavClass(ViewContext) list-group-item centerp"><a class="btn" asp-page="./PersonalData">Προσωπικά Δεδομένα</a></li>
</ul>
