    <script>
        function initMap() {
            var pathtostore = [
                { lat: 40.024802, lng: 22.574165 },
                { lat: 40.024638, lng: 22.572994 },
                { lat: 40.024420, lng: 22.571835 },
                { lat: 40.024306, lng: 22.570591 },
                { lat: 40.023491, lng: 22.569878 },
                { lat: 40.023282, lng: 22.570698 },
                { lat: 40.022966, lng: 22.571530 }
            ];
            var markers = [];

            var magazi = { lat: 40.023111, lng: 22.572992 };
            var map = new google.maps.Map(
                document.getElementById('map'), { zoom: 16, center: magazi });
            var image = "images/icon-car.png";
            function drop() {
                clearMarkers();
                for (var i = 0; i < pathtostore.length; i++) {
                    addMarkerWithTimeout(pathtostore[i], i * 300);
                }
            }
            function addMarkerWithTimeout(position, timeout) {
                window.setTimeout(function () {
                    markers.push(
                        new google.maps.Marker({
                            position: position,
                            map: map,
                            animation: google.maps.Animation.DROP,
                            icon: image
                        })
                    );
                }, timeout);
            }
            function clearMarkers() {
                for (var i = 0; i < markers.length; i++) {
                    markers[i].setMap(null);
                }
                markers = [];
            }
            drop();
        }

    </script>




</div>
